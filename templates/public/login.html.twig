{% extends 'base.html.twig' %}



{% block body %}


    <form action="{{ path('app_login') }}" method="post">

        <section class="vh-100 gradient-custom">

            <div class="container py-5 h-100">

                <div class="row d-flex justify-content-center align-items-center h-100">

                    <div class="col-12 col-md-8 col-lg-6 col-xl-5"><span class="text-danger">* : champs obligatoire</span>
                        {% if error %}
                            <div class="flash-notice alert alert-danger d-flex align-items-center"
                                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2 text-uppercase">Connexion</h2>
                                    <p class="text-white-50 mb-5">Entrez votre identifiant et votre mot de passe </p>

                                    <div class="form-outline form-white mb-4">
                                        <input type="text" id="typeEmailX" class="form-control form-control-lg"
                                               name="_username"
                                               value="{{ last_username }}" placeholder="Identifiant de connexion"/>


                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <input type="password" id="typePasswordX" class="form-control form-control-lg"
                                               name="_password" placeholder="Mot de Passe"/>
                                    </div>
                                    <label>
                                        <input type="checkbox" name="_remember_me"/>
                                        Se souvenir de moi
                                    </label>
                                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Mot de passe
                                            Oubli√©?</a></p>
                                    <input type="hidden" name="_target_path" value="{{ path('app_sorties') }}"/>
                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
    </section>
{% endblock %}