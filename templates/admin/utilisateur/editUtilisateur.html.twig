{% extends 'base.html.twig' %}

{% block title %}Gestion Utilisateur{% endblock %}

{% block body %}
    <section class="container-fluid">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.nom) }}</label>*
                <div class="form-control">{{ form_widget(form.nom ) }}</div>
            </div>

            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.prenom) }}</label>*
                <div class="form-control">{{ form_widget(form.prenom ) }}</div>
            </div>
            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.site) }}</label>*
                <div class="form-control">{{ form_widget(form.site ) }}</div>
            </div>
            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.pseudo) }}</label>*
                <div class="form-control">{{ form_widget(form.pseudo ) }}</div>
            </div>

            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.telephone) }}</label>*
                <div class="form-control">{{ form_widget(form.telephone) }}</div>
            </div>
            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.email) }}</label>*
                <div class="form-control">{{ form_widget(form.email) }}</div>
            </div>
            <div class="col-lg-3">
                <label class="form-label">{{ form_label(form.urlPhoto) }}</label>
                <div class="form-control">{{ form_widget(form.urlPhoto) }}</div>
            </div>

            <div class="col-lg-12 text-center mt-5">
                {% if (app.request.get('_route')=='app_admin_add_user') %}
                    <button class="btn btn-success" type="submit">Ajouter</button>
                {% else %}
                    <button class="btn btn-warning" type="submit">Modifier</button>
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}

    </section>
{% endblock %}
